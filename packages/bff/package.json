{
  "name": "bff",
  "private": true,
  "scripts": {
    "dev": "pnpm gen && FORCE_COLOR=true run-p -l -c dev:*",
    "dev:serve": "node scripts/dev.js",
    "dev:gql-codes": "pnpm gen:gql-codes -- --watch",
    "gen": "FORCE_COLOR=true run-s gen:*",
    "gen:gql-codes": "graphql-codegen './src/schema/**/*.ts'",
    "lint": "FORCE_COLOR=true run-p -l -c lint:*",
    "lint:eslint": "eslint './**/*.{js,ts,tsx}' --format codeframe --color --max-warnings=0",
    "lint:typing": "tsc --pretty",
    "lint:format": "prettier -c './**/*.{js,ts,tsx}'",
    "format": "prettier -w './**/*.{js,ts,tsx}'",
    "test": "jest"
  },
  "dependencies": {
    "@graphql-tools/schema": "^8.3.1",
    "apollo-datasource": "^3.3.1",
    "apollo-server-caching": "^3.3.0",
    "apollo-server-core": "^3.6.2",
    "apollo-server-fastify": "^3.6.2",
    "dataloader": "^2.0.0",
    "fastify": "^3.27.0",
    "graphql": "^16.3.0",
    "graphql-scalars": "^1.14.1",
    "graphql-subscriptions": "^2.0.0",
    "subscriptions-transport-ws": "^0.11.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.1.1",
    "@graphql-codegen/cli": "^2.4.0",
    "@graphql-codegen/typescript": "^2.4.2",
    "@graphql-codegen/typescript-resolvers": "^2.4.3",
    "@swc/core": "^1.2.135",
    "@swc/jest": "^0.2.17",
    "@trivago/prettier-plugin-sort-imports": "^3.1.1",
    "@types/jest": "^27.4.0",
    "@types/source-map-support": "^0.5.4",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "esbuild": "^0.14.14",
    "esbuild-node-externals": "^1.4.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "source-map-support": "^0.5.21",
    "utility-types": "^3.10.0"
  }
}
