{
  "name": "bff",
  "private": true,
  "scripts": {
    "dev": "FORCE_COLOR=true run-p -l -c dev:*",
    "dev:serve": "node scripts/dev.js",
    "dev:gen-gql-codes": "graphql-codegen --watch",
    "lint": "FORCE_COLOR=true run-p -l -c lint:*",
    "lint:eslint": "eslint './**/*.{js,ts,tsx}' --format codeframe --color --max-warnings=0",
